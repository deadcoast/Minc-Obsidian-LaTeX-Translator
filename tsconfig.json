{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "ESNext",
    "target": "ES2020",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "lib": [
      "DOM",
      "ES2020",
      "DOM.Iterable"
    ],
    "jsx": "react-jsx",
    "paths": {
      "@core/*": ["src/core/*"],
      "@ui/*": ["src/ui/*"],
      "@components/*": ["src/ui/components/*"],
      "@views/*": ["src/ui/views/*"],
      "@hooks/*": ["src/ui/hooks/*"],
      "@styles/*": ["src/ui/styles/*"],
      "@utils/*": ["src/utils/*"],
      "@types/*": ["src/types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
